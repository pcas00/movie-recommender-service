<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" name="RecommenderWebService" packages="edu.bc.casinepe">
    <Appenders>
        <File name="Default" fileName="logs/app.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
        <File name="Metrics" fileName="logs/metrics.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="ALL" additivity="false">
            <AppenderRef ref="Default"/>
        </Root>
        <Logger name="edu.bc.casinepe" level="ERROR" additivity="false">
            <AppenderRef ref="Errors"/>
        </Logger>
        <Logger name="edu.bc.casinepe.metrics.MetricSystem" level="ALL" additivity="false">
            <AppenderRef ref="Metrics"/>
        </Logger>
    </Loggers>
</Configuration>