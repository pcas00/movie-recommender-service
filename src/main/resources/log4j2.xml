<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" name="RecommenderWebService" packages="edu.bc.casinepe">
    <Appenders>
        <File name="Default" fileName="/home/ec2-user/logs/app.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
        <File name="Metrics" fileName="/home/ec2-user/logs/metrics.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="edu.bc.casinepe.MetricSystem" level="info" additivity="false">
            <AppenderRef ref="Metrics"/>
        </Logger>
        <Root level="info" additivity="false">
            <AppenderRef ref="Default"/>
        </Root>
    </Loggers>
</Configuration>